@{
    ViewBag.Title = "Home";
}

<div id="header">
   
    <div class="links">
        @Html.ActionLink("Product List", "Index", "Product", null, new { @class = "btn-link" })
        @Html.ActionLink("Add Product", "Create", "Product", null, new { @class = "btn-link" })
        @Html.ActionLink("View Category", "Index", "Category", null, new { @class = "btn-link" })
        @Html.ActionLink("Add Category", "Create", "Category", null, new { @class = "btn-link" })
    </div>
</div>

<div class="center-content">
    <h2>Welcome to Nimpap Infotech</h2>
    <p>Select an option from the menu above.</p>
</div>

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    #header {
        display: flex;
        flex-direction: column; /* Adjust layout */
        align-items: center;
        background-color: #2c3e50;
        color: white;
        padding: 15px 25px;
        height: auto;
    }

  

    .header-text {
        text-align: center;
        margin-bottom: 20px; /* Space between text and links */
    }

    .title {
        font-size: 28px;
        margin: 0;
    }

    .description {
        font-size: 14px;
        margin: 0;
    }

    .links {
        display: flex;
        justify-content: center;
        gap: 15px; /* Space between links */
        flex-wrap: wrap; /* Allow wrapping on small screens */
    }

    .btn-link {
        display: inline-block;
        color: white;
        background-color: #e67e22; /* Adjusted button color */
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .btn-link:hover {
            background-color: #d35400; /* Adjusted hover color */
        }

    .center-content {
        text-align: center;
        margin: 50px auto;
        max-width: 600px;
        background-color: #b98686;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>
